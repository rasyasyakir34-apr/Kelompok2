<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.provideruas">
    <!-- Deklarasi izin sudah benar di sini -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProviderUAS"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Kuota_RekomendasiActivity"
            android:exported="false" />
        <!-- LoginActivity sebagai Launcher (Halaman pertama) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- RegisterActivity -->
        <activity android:name=".RegisterActivity" /> <!-- Main Activity -->
        <activity android:name=".MainActivity" /> <!-- Activity Alifetime -->
        <activity android:name=".AlifetimeActivity" /> <!-- Activity lainnya -->
        <activity android:name=".PlaygroundActivity" />
        <activity android:name=".PaketActivity" />
        <activity android:name=".HiburanActivity" /> <!-- Settings Activity -->
        <activity android:name=".SettingActivity" />
        <activity
            android:name=".HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".IsiPulsaActivity"
            android:exported="false" />
        <activity
            android:name=".TransferPulsaActivity"
            android:exported="false" />
    </application>

</manifest>