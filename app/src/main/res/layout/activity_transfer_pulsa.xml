<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#6B3FA0"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TRANSFER PULSA"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Saldo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sisa Pulsa Kamu"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvSisaPulsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp0"
                    android:textColor="#6B3FA0"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Instruksi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan nomor tujuan transfer pulsa, dan pilih nominal pulsa"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Input Nomor Tujuan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MASUKAN NOMOR TUJUAN"
                android:textSize="12sp"
                android:textColor="#999999"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/etNomorTujuan"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Nomor AXIS"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:background="@android:drawable/editbox_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/btnAmbilKontak"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="ðŸ“ž"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Input Jumlah Pulsa -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BERAPA JUMLAH PULSA YANG DIBAGI?"
                android:textSize="12sp"
                android:textColor="#999999"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etJumlahPulsa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Minimal Rp5.000"
                android:inputType="number"
                android:background="@android:drawable/editbox_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <!-- Grid Nominal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn5000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="5000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn10000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn15000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="15000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn20000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="20000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn25000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="25000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn30000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="30000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Info Warning -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="â„¹ï¸"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pastikan saldo pulsa kamu mencukupi karena ada biaya layanan transfer pulsa"
                    android:textColor="#666666"
                    android:textSize="13sp"/>

            </LinearLayout>

            <!-- Button Lanjut -->
            <Button
                android:id="@+id/btnLanjut"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="LANJUT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:backgroundTint="#D4E157"
                android:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>