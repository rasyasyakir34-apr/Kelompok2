<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Main Content with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Purple Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6B3FA0"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="32dp">

                <!-- Top Buttons -->
                <Button
                    android:id="@+id/btnKenalan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:text="âœï¸ KENALAN"
                    android:textColor="#6B3FA0"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FFFFFF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:text="â“ INFO"
                    android:textColor="#6B3FA0"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FFFFFF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="20dp" />

                <!-- Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnKenalan"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLAYGROUND"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yuk, pilih &amp; klaim bonusmu!"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Bonus Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Card 1: Parade Bonus -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardParadeBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <!-- Badge -->
                        <TextView
                            android:id="@+id/badgeParade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­ ADA BONUS!"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:background="#6B3FA0"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            app:cornerRadius="12dp" />

                        <!-- Icon -->
                        <TextView
                            android:id="@+id/iconParade"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="ðŸŽˆ"
                            android:textSize="60sp"
                            android:gravity="center" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/badgeParade"
                            android:layout_toStartOf="@id/iconParade"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parade Bonus"
                                android:textColor="#333333"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Klaim bonus tambahan untuk kamu!"
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="12dp" />

                            <Button
                                android:id="@+id/btnLihatParade"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="LIHAT BONUS"
                                android:textColor="#333333"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:backgroundTint="#D4FF00"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                app:cornerRadius="21dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 2: Sureprize -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSureprize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <!-- Icon -->
                        <TextView
                            android:id="@+id/iconSureprize"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="ðŸŽ"
                            android:textSize="60sp"
                            android:gravity="center" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/iconSureprize"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sureprize"
                                android:textColor="#333333"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aktifkan paket &amp; ambil bonus mingguan!"
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="12dp" />

                            <Button
                                android:id="@+id/btnLihatSureprize"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="LIHAT BONUS"
                                android:textColor="#333333"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:backgroundTint="#D4FF00"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                app:cornerRadius="21dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 3: Mystery Box -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMysteryBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <!-- Icon -->
                        <TextView
                            android:id="@+id/iconMystery"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="ðŸ“¦"
                            android:textSize="60sp"
                            android:gravity="center" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/iconMystery"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mystery Box"
                                android:textColor="#333333"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bonus box dari aktivasi paket/AIGO!"
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="12dp" />

                            <Button
                                android:id="@+id/btnLihatMystery"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="LIHAT BONUS"
                                android:textColor="#333333"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:backgroundTint="#D4FF00"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                app:cornerRadius="21dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 4: Top Up Sureprize -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTopUpSureprize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <!-- Icon -->
                        <TextView
                            android:id="@+id/iconTopUp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="ðŸ“±"
                            android:textSize="60sp"
                            android:gravity="center" />

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/iconTopUp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Top Up Sureprize"
                                android:textColor="#333333"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Isi pulsa lalu dapat bonus!"
                                android:textColor="#666666"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="12dp" />

                            <Button
                                android:id="@+id/btnLihatTopUp"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:text="LIHAT BONUS"
                                android:textColor="#333333"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:backgroundTint="#D4FF00"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                app:cornerRadius="21dp" />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/navBeranda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ "
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textColor="#6B3FA0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPlayground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ®"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playground"
                android:textColor="#999999"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPaket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E91E8C">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
